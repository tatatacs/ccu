<div id="response">
	<div class="field name">
		<div class="label">Nome do aluno: </div>
		<div class="field">{{question.name}}</div>
	</div>

	<div class="field name">
		<div class="label">Título</div>
		<div class="field">{{question.title}}</div>
	</div>

	<div class="field class">
		<div class="label">Aula:</div>
		<div class="field">{{question.course}}</div>
	</div>
	<div class="field message">
		<div class="label">Dúvida:</div>
		<div class="field">{{question.question}}</div>
	</div>

	<div class="field message">
		<div class="label">Resposta</div>
		<textarea class='response' rows="4" cols="50" placeholder='Escreva aqui a sua resposta'></textarea>
	</div>

	<div class="field buttons">
		<button class='send'>Enviar resposta</button>
		<button class='cancel'>Cancelar</button>
	</div>
</div>