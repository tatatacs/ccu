
<div id="question">
	<div class="field name">
	<div class="label">Nome do professor</div>
	{{#if teacher}}
		<input class='name' value="{{teacher}}" disabled></input>
	{{else}}
		<input class='name' placeholder='Escreva aqui o nome do seu professor'></input>
	{{/if}}
</div>

<div class="field name">
	<div class="label">Título</div>
	{{#if currentClass}}
	<input class='tit' value="{{currentClass}}"></input>
	{{else}}
	<input class='tit' placeholder='Escreva aqui o título da sua dúvida'></input>
	{{/if}}
</div>

<div class="field name">
	<div class="label">Aula</div>
	{{#if course}}
	<input class='classname' value="{{course}}" disabled></input>
	{{else}}
	<input class='classname' placeholder='Escreva aqui o nome da aula'></input>
	{{/if}}
</div>
<div class="field message">
	<div class="label">Dúvida</div>
	<textarea class='question' rows="4" cols="50" placeholder='Escreva aqui a sua dúvida'></textarea>
</div>
<div class="field buttons">
	<button class='send'>Enviar dúvida</button>
	<button class='cancel'>Cancelar</button>
</div>
</div>
